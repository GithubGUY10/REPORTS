import java.util.ArrayList;
 
 /**
 * The ReportGenerator class handles the generation of various financial reports
 * including monthly summaries, annual reports, and category-specific reports.
 * It can also export report data to CSV format and display results.
 * @author Iman Hamby
 * */
 
public class ReportGenerator {

   /**
   * Placeholder constructor: construct ReportGenerator specific to user needs.
   * @param userName identity of the requesting user
   * @param year the year of the data to report
   * */ 
   public ReportGenerator(String userName, int year) {
	   this.userName = userName;
	   this.year = year;
	   this.categories = new ArrayList<String>();
	   this.balance_per_category = new ArrayList<Double>();
   }
   /**
    * The year for which the report is being generated.
    * @author Arif Hossain
    */
   private int year;

   /**
    * The name of the user for whom the report is generated.
    * @author Arif Hossain
    */
   private String userName;

   /**
    * The total income recorded for the reporting period.
    * @author Arif Hossain
    */
   private double totalIncome = 0;

   /**
    * The total expenses recorded for the reporting period.
    * @author Arif Hossain
    */
   private double totalExpenses = 0;

   /**
    * The categories used for organizing yearly expenses and income.
    * @author Arif Hossain
    */
   private ArrayList<String> categories;
   private ArrayList<Double> balance_per_category;

   /**
    * Generates a summary report of financial data for each month in the year.
    * 
    * @return A String representing the monthly financial summary report.
    * @author Wajih Chowdhury
    */
   public String generateMonthlySummary() {
       double[] monthlyIncome = {2500, 2800, 2700, 3000, 2600, 2900};
       double[] monthlyExpenses = {1500, 1600, 1450, 1800, 1550, 1700};

       StringBuilder report = new StringBuilder();
       report.append("Monthly Summary for ").append(year).append("\n");
       report.append("Month\tIncome\tExpenses\tNet\n");

       totalIncome = 0.0;
       totalExpenses = 0.0;
       for (int i = 0; i < monthlyIncome.length; i++) {
       	
           double income = monthlyIncome[i];
           double expenses = monthlyExpenses[i];
           double net = income - expenses;

           totalIncome += income;
           totalExpenses += expenses;

           report.append((i + 1)).append("\t")
                 .append(String.format("$%.2f", income)).append("\t")
                 .append(String.format("$%.2f", expenses)).append("\t")
                 .append(String.format("$%.2f", net)).append("\n");
       }
       
       return report.toString();
   
       
   }

   /**
    * Generates a comprehensive financial report for the entire year,
    * summarizing income, expenses, and overall balance.
    * 
    * @return A String representing the annual financial report.
    * @author Wajih Chowdhury
    */
   public String generateAnnualReport() {
       
       if (totalIncome == 0.0 && totalExpenses == 0.0) {
           generateMonthlySummary();
       }

       double balance = totalIncome - totalExpenses;

       StringBuilder report = new StringBuilder();
       report.append("Annual Report for ").append(year).append("\n");
       report.append("User: ").append(userName).append("\n\n");
       report.append(String.format("Total Income:   $%.2f%n", totalIncome));
       report.append(String.format("Total Expenses: $%.2f%n", totalExpenses));
       report.append(String.format("Net Balance:    $%.2f%n\n", balance));

       return report.toString();
   }

   /**
    * Generates a financial report grouped by categories, showing total amounts
    * spent or earned for each category.
    * 
    * @return A String representing the category-based financial report.
    * @author Wajih Chowdhury
    */
   public String generateCategoryReport() {
       StringBuilder report = new StringBuilder();
       report.append("Annual Report Per Category for ").append(year).append("\n");
       report.append("User: ").append(userName).append("\n\n");
       for (int i = 0; i < categories.size(); i++) {
    	   report.append(categories.get(i)).append(": ").append(balance_per_category.get(i)).append("\n");
       }
       
       return report.toString();
   }

   /**
    * Exports the generated report data to a CSV file with the given filename.
    * 
    * @param filename The name of the CSV file to which the report will be exported.
    * @return true if the export was successful, false otherwise.
    * @author Wajih Chowdhury
    */
   public boolean exportToCSV(String filename) {
       return false;
   }

   /**
    * Displays the generated report results to the console or user interface.
    * 
    * @author Wajih Chowdhury
    */
   public void displayResults() {
       System.out.print(this.generateAnnualReport());
       System.out.print(this.generateCategoryReport());
   }

}

